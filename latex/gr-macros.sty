% ══════════════════════════════════════════════════════════════
%  DERIVATIVES
% ══════════════════════════════════════════════════════════════

% Partial derivative: \pd{f}{x}, \pd[2]{f}{x}
\newcommand{\pd}[3][]{\frac{\partial^{#1} #2}{\partial #3^{#1}}}

% Total derivative
\newcommand{\td}[2]{\frac{d #1}{d #2}}

% Upright differential
\newcommand{\dd}{\mathrm{d}}

% Covariant derivative operator
\newcommand{\covd}{\nabla}

% Lie derivative
\newcommand{\Lie}{\mathcal{L}}

% d'Alembertian / wave operator
\newcommand{\dalem}{\Box}

% Laplacian
\newcommand{\lap}{\Delta}

% ══════════════════════════════════════════════════════════════
%  VECTORS & NOTATION
% ══════════════════════════════════════════════════════════════

% Bold vector (for 3-vectors in Newtonian context)
\newcommand{\vb}[1]{\boldsymbol{#1}}

% Unit vector
\newcommand{\uv}[1]{\hat{\boldsymbol{#1}}}

% Dot (time derivative)
\newcommand{\dt}[1]{\dot{#1}}
\newcommand{\ddt}[1]{\ddot{#1}}

% Norm
\newcommand{\norm}[1]{\lVert #1 \rVert}

% ══════════════════════════════════════════════════════════════
%  TENSOR CALCULUS & DIFFERENTIAL GEOMETRY
% ══════════════════════════════════════════════════════════════

% Christoffel symbols: \chris{a}{bc}
\newcommand{\chris}[2]{\Gamma^{#1}{}_{#2}}

% Riemann tensor
\newcommand{\Riem}{R}

% Ricci tensor / scalar
\newcommand{\Ric}{R}

% Einstein tensor
\newcommand{\Ein}{G}

% Weyl tensor
\newcommand{\Weyl}{C}

% Metric
\newcommand{\metric}{g}

% Tensor type
\newcommand{\ttype}[2]{\mathcal{T}(#1,#2)}

% Tensor product
\newcommand{\tp}{\otimes}

